@model Matricula_Proyecto.Models.Calificaciones

@{
    ViewBag.Title = "EditarCalificacion";
}

<h2>Editar Calificación</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.horario_id)
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Calificación</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.calificacion_id)

        <div class="form-group">
            @Html.LabelFor(model => model.estudiante.nombre_estudiante, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.estudiante.nombre_estudiante
                @Html.HiddenFor(model => model.estudiante_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nota_curso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nota_curso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nota_curso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
